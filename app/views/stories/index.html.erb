<div id="content">
	<h1 id="story_title">Welcome!</h1>
	<div id="story">
	    <p class="error"><%= flash[:notice] %></p>
		<% if @user %>
			<% if Invite.find_by_user_id(@user.id) %>
				<h3>Hello <%= @user.name %>, you belong to these stories:</h3>
			<% end %>
		<% end %>
		<ul>
		<% @stories.each do |story| %>
			<% if @user %>
				<% if story.private_story == true && story.invites.find_by_story_id_and_user_id(story.id, @user.id) %>
					<li><%= link_to story.title, story %> (Private)</li>
				<% end %>
			<% end %>
		<% end %>
		</ul>
		<h3>Check Out Our Community Stories:</h3>
		<ul>
		<% @stories.each do |story| %>
			<% if story.private_story == false %>
			<li><%= link_to story.title, story %></li>
			<% end %>
		<% end %>
		</ul>
	</div><!-- #story -->
	<div class="bottom_pad"></div>
</div><!-- content -->
<div id="sidebar">
	<div class="sidebar_widget">
		<h2>How This Works</h2>
		<ul class="homepage_sidebar">
			<li>Register to contribute to stories</li>
			<li>Submit a new line to a story</li>
			<li>Vote on other submissions</li>
			<li>After ten lines, a story is complete</li>
			<li>A new story will be generated</li>
		</ul>
	</div><!-- sidebar_widget -->
	<div class="sidebar_widget">
		<h2>Now featuring Private Stories</h2>
	</div><!-- sidebar_widget -->
</div><!-- sidebar -->